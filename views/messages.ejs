<% include head %>
<% include navbar %>

<div class="container messages-container">
     <table id="example" class="table table-striped table-messages" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Object</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% messages.forEach(function (message) { %>
                <tr>
                    <td><%= message.id %></td>
                    <td><%= message.contact_email %></td>
                    <td><%= message.contact_name %></td>
                    <td><%= message.contact_object %></td>
                    <td><%= message.contact_message %></td>
                    <td>
                    <div class="btn-group" role="group" aria-label="actions">
                    <form action="message/delete/<%= message.id %>" method="post">
                        <a class="btn-link" role="button" href="/message/<%= message.id %>"><span class="oi oi-eye"></span></a>
                        <button class="btn-link" type="submit" aria-label="Delete">
                        <span class="oi oi-trash"></span>
                        </button>
                        </form>
                    </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<% include footer %>

